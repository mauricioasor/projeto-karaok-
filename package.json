{
  "name": "karaoke-terminal",
  "version": "1.0.0",
  "description": "Sistema de pedidos de karaokê com impressão automática",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.karaoke.terminal",
    "productName": "Karaoke Terminal",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "pdf-to-printer": "^5.6.0",
    "pdfkit": "^0.15.0"
  }
}