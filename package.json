{
  "name": "karaoke-terminal",
  "version": "1.0.0",
  "description": "Sistema de pedidos de karaokê com impressão automática",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.karaoke.terminal",
    "productName": "Karaoke Terminal",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "24.6.0"
  },
  "dependencies": {
    "node-thermal-printer": "^4.0.6"
  }
}
